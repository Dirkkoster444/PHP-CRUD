{% extends 'base.html.twig' %}

{% block stylesheets %}

{% endblock %}
{% block title %}Post List{% endblock %}
{% block body %}
{% for message in app.flashes('message') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Nr</th>
            <th scope="col">Titel</th>
            <th scope="col">Content</th>
            <th scope="col">acties</th>
        </tr>
        </thead>
        <tbody>
            {% for post in posts %}
                <tr>
                <th scope="row">{{ loop.index }}</th>
                <td>{{ post.titel }}</td>
                <td>{{ post.content }}</td>
                <td>
                    <a href="{{ path('edit-post', {id: post.id}) }}" class="btn btn-success">Edit</a>
                    <a href="{{ path('delete-post', {id: post.id}) }}" class="btn btn-danger">Delete</a>
                </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <form action="{{ path('create-post') }}" method="post">
        <button type="submit" class="btn btn-primary">Voeg een post toe!</button>
    </form>
{% endblock %}
