{% extends "base.html.twig" %}

{% block body %}
        <div class="mt-4">
            <h3>{{ form.vars.data.id is null ? 'Create post' : 'Update post'}}</h3>
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.titel) }}
                {{ form_widget(form.titel, {'attr':{'class':'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.content) }}
                {{ form_widget(form.content, {'attr':{'class':'form-control'}}) }}
            </div>
            <button type="submit" class="btn btn-primary mt-2">
                {{ form.vars.data.id is null ? 'Save post' : 'Update post'}}
            </button>
            {{ form_end(form) }}
        </div>
{% endblock %}